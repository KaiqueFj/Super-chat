extends base

block append head
  link(rel="stylesheet" href='/styles/overview/styles.css')
  script(src="https://code.jquery.com/jquery-3.6.4.min.js")
  script.
    const socket = io();
  script(defer src='/js/chat.js')

block content

  main.main
    .leftMenu
      .listUser
        each user in users
          .users
            img.user-img(src=`/images/user/${user.photo}` alt=`Photo of ${user.name}`)
            span.userName= user.name
            each message in user.messages
              span.userMessage=`${message.message}`
              - const formattedTime = message.createdAt.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
              span.messageTime=formattedTime

    .messages
      ul.messageList

    .form
      form.form-input(action="")
        .inputbox
          input.inputMessage
          button 
        .inputbox
          input.inputRoom
          button.join
